" Settings
" General
set cursorline
set cursorcolumn
set number
set linebreak
set showbreak=+++
set textwidth=100
set showmatch
set smartcase
set ignorecase
set incsearch
set autoindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set term=screen-256color
let g:monokai_original=1
let g:rehash256=1
set background=dark
syntax enable
colorscheme monokai
let &termencoding=&encoding
set fileencodings=utf-8,gb18030,gbk,gb2312,big5
set encoding=utf-8
set langmenu=en_US.UTF-8
language message en_US.UTF-8
let mapleader = "\<space>"

" Advanced
set ruler
set autochdir
set undolevels=1000
set backspace=indent,eol,start

" YouCompleteMe
let g:ycm_global_ycm_extra_conf = '~/.ycm_extra_conf.py'
let g:ycm_confirm_extra_conf=0
set completeopt=longest,menu
let g:ycm_path_to_python_interpreter='/usr/bin/python3'
let g:ycm_seed_identifiers_with_syntax=1
let g:ycm_complete_in_comments=1
let g:ycm_collect_identifiers_from_comments_and_strings = 0
let g:ycm_min_num_of_chars_for_completion=2
let g:ycm_autoclose_preview_window_after_completion=1
let g:ycm_cache_omnifunc=0
let g:ycm_complete_in_strings = 1
autocmd InsertLeave * if pumvisible() == 0|pclose|endif

" vim-airline
"let g:airline_theme="luna"
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#buffer_nr_show = 1

"设置切换Buffer快捷键"
nnoremap <C-N> :bn<CR>
nnoremap <C-P> :bp<CR>

" 关闭状态显示空白符号计数,这个对我用处不大"
let g:airline#extensions#whitespace#enabled = 0
let g:airline#extensions#whitespace#symbol = '!'

" nerdtree
noremap <F2> <ESC>:NERDTreeToggle<CR>
let NERDTreeChDirMode=1
let NERDTreeShowBookmarks=1
let NERDTreeIgnore=['\~$', '\.pyc$', '\.swp$']
let NERDTreeWinSize=25

" TAGLIST
noremap <F3> <ESC>:TlistToggle<CR>
let Tlist_Auto_Open = 0
let Tlist_Ctags_Cmd = "ctags"
let Tlist_Show_One_File = 1

"缩进指示线"
let g:indentLine_char='┆'
let g:indentLine_enabled = 1

" nerdcommenter
"let mapleader = ","
map <F4> <leader>ci <CR>

" auto-pairs
let g:AutoPairs = {'(':')', '[':']', '{':'}',"'":"'",'"':'"'}

" formatter
let g:formatter_yapf_style = 'pep8'

au BufWrite * :Autoformat

noremap <leader>w :w<CR>
noremap <leader>x :wq<CR>
noremap <leader>q :wqa<CR>
noremap <leader>n <ESC>:NERDTreeToggle<CR>
noremap <leader>t <ESC>:TlistToggle<CR>
noremap <leader>f :Autoformat<CR>
noremap <leader>- :sp<CR>
noremap <leader>\ :vsp<CR>
noremap <leader>j <C-w>j
noremap <leader>k <C-w>k
noremap <leader>h <C-w>h
noremap <leader>l <C-w>l
